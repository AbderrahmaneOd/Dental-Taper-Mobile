<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#EEF0E5"
        android:radius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idStudentPWItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/mesure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesure d'angle 1 :"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idMesure1Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/mesure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mesure d'angle 2 :"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idMesure2Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="PW title :"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idPWTitleItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="TextView" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
